@model CheckListApp.ViewModels.SongsManagementViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<form asp-action="Index" asp-controller="Songs" method="get">
    <p>
        <select asp-for="SelectedSortOption" asp-items="@Html.GetEnumSelectList<CheckListApp.ViewModels.SongsServiceConstants.SORTOPTIONS>()">
            <option selected="selected" value="-1">Default</option>
        </select>
        <input type="text" asp-for="InputFilterName" class="text-left" />
        <input type="submit" value="Search & Sort" class="btn-primary" />
    </p>
    
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongsCollection[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongsCollection[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongsCollection[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongsCollection[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongsCollection[0].AddedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SongsCollection) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
